//將資料寫出

#include <iostream>                                  載入標準函示庫
#include <fstream>                                   載入標準函示庫
using namespace std;                                 使用std這個命名空間

int main()
{
  ofstream output;                                    建立一個文字檔將資料寫入(寫入資寮於檔案)

  output.open("d:///scores.txt");                     在D槽打開一個叫scores的txt文字檔

  output << "John" << " " << "T" << " " << "Smith"    將文字(John T Smith 90)寫入於scores文字檔 換行
    << " " << 90 << endl;
  output << "Eric" << " " << "K" << " " << "Jones"     將文字(Eric K Jones 85)寫入於scores文字檔 換行
    << " " << 85 << endl;
  output << "周" << " " << "J" << " " << "志學"        將文字(周 J 志學 10)寫入於scores文字檔 換行
    << " " << 10 << endl;


  output.close();

  cout << "Done" << endl;

  return 0;
}

-------------------------------------------------------------------------
#include <iostream>
#include <fstream>
#include <string>
using namespace std;

int main()
{
  ifstream input("d:\\scores.txt");

  // Read data
  string firstName;
  char mi;
  string lastName;
  int score;
  input >> firstName >> mi >> lastName >> score;
  cout << firstName << " " << mi << " " << lastName << " "
    << score << endl;

  input >> firstName >> mi >> lastName >> score;
  cout << firstName << " " << mi << " " << lastName << " "
    << score << endl;
    
  input >> firstName >> mi >> lastName >> score;
  cout << firstName << " " << mi << " " << lastName << " "
    << score << endl;

  input.close();

  cout << "Done" << endl;

  return 0;
}
